doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Bojagi
    link(rel='stylesheet', type='text/css', media='screen', href='../stylesheets/style.css')
    script(type='text/javascript', src='//code.jquery.com/jquery-3.6.1.min.js')
    link(href='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css', rel='stylesheet', type='text/css')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
    //if IE
      script(src='http://html5shiv.googlecode.com/svn/trunk/html5.js')
  body
    .navbar.navbar-inverse.navbar-static-top
      .container
        a.navbar-brand(href='/') BOJAGI
        button.navbar-toggle(data-toggle='collapse', data-target='.navHeaderCollapse')
          span.icon-bar
          span.icon-bar
          span.icon-bar
        .collapse.navbar-collapse.navHeaderCollapse
          ul.nav.navbar-nav.navbar-right
            if home
              li.active 
                a(href='#') Home
            else
              li 
                a(href='/') Home 
            if list
              li.active
                a(href='#') List
            else
              li
                a(href='/list') List
            if create
              li.active
                a(href='/edit') Create
            else
              li
                a(href='/edit') Create
            if about
              li.active
                a(href='#') About
            else
              li
                a(href='about') About

    .page
      block content

